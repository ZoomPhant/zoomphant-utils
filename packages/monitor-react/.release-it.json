{
  "git": {
    "commitMessage": "chore: release ${version}"
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/bumper": {
      "out": {
        "file": "package.json",
        "path": [
          "dependencies.@zoomphant-utils/monitor"
        ]
      }
    },
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "type": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          }
        ]
      },
      "infile": "CHANGELOG.md"
    }
  }
}
